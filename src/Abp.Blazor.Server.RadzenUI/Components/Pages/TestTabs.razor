@page "/test-tabs"
@using Microsoft.AspNetCore.Components
@inject NavigationManager NavigationManager

<PageTitle>Test Tabs</PageTitle>

<h3>Test Tabs Page</h3>

<p>This is a test page to verify the Tabs functionality.</p>

<button @onclick="NavigateToAnotherPage">Go to User Management</button>
<button @onclick="NavigateToRolePage">Go to Role Management</button>

@code {
    void NavigateToAnotherPage()
    {
        NavigationManager.NavigateTo("/user");
    }

    void NavigateToRolePage()
    {
        NavigationManager.NavigateTo("/role");
    }
}