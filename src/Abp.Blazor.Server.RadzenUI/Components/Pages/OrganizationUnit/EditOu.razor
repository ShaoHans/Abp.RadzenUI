@using Abp.RadzenUI.Application.Contracts.Organizations
@using Volo.Abp.AspNetCore.Components
@using Volo.Abp.Identity
@inherits AbpRadzenUIComponentBase

<RadzenTemplateForm TItem="OrganizationUnitUpdateDto" Data=@DialogFromOption.Model Submit=@DialogFromOption.OnSubmit Style="max-height:calc(100vh - 200px); display: flex;flex-direction:column">
    <DialogFormLayout CancelText="@L["Cancel"]" CancelClick="DialogFromOption.OnCancel" SaveText="@L["Save"]">
        <RadzenStack Gap="2rem" class="rz-p-4 rz-p-md-12">
            <RadzenRow AlignItems="AlignItems.Center" RowGap="0.25rem">
                <RadzenColumn Size="12" SizeMD="4" class="rz-text-align-start rz-text-align-md-end">
                    <RequiredMark />
                    <RadzenLabel Text="@L["DisplayName:Ou.DisplayName"]" Component="@nameof(DialogFromOption.Model.DisplayName)" />
                </RadzenColumn>
                <RadzenColumn Size="12" SizeMD="8">
                    <RadzenTextBox Name="@nameof(DialogFromOption.Model.DisplayName)" @bind-Value=@DialogFromOption.Model.DisplayName Style="display: block; width: 100%;" MaxLength="OrganizationUnitConsts.MaxDisplayNameLength" />
                    <RadzenRequiredValidator Component="@nameof(DialogFromOption.Model.DisplayName)" Text="@L.Required("DisplayName:Ou.DisplayName")" />
                </RadzenColumn>
            </RadzenRow>
        </RadzenStack>
    </DialogFormLayout>
</RadzenTemplateForm>


@code {
    [Parameter]
    public DialogFromOption<OrganizationUnitUpdateDto> DialogFromOption { get; set; } = default!;

    public EditOu()
    {
        LocalizationResource = typeof(AbpRadzenUIResource);
    }
}
